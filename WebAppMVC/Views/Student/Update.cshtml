@{
}

@using WebAppMVC.Models
@model Student

<form asp-controller="Student" asp-action="Update" method="post">
    Code: <input class="form-control" type="text" asp-for="Code" readonly/>
    <span class="mb-3" style="color:red;font-size:12px" asp-validation-for="Code"></span> <br />
    Name: <input class="form-control" type="text" asp-for="Name" />
    <span class="mb-3" style="color:red;font-size:12px" asp-validation-for="Name"></span> <br />
    Mark: <input class="form-control" type="text" asp-for="Mark" min="0" max="10" />
    <span class="mb-3" style="color:red;font-size:12px" asp-validation-for="Mark"></span> <br />
    <input class="btn btn-outline-danger" type="submit" value="Update" name="update" /> <br />
</form>