<Window x:Class="ClientApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="700">
    <Grid>
        <StackPanel>
            <DataGrid x:Name="dgProduct" Width="550" Height="250" Margin="5"></DataGrid>
            <Button x:Name="btnLoad" Content="LOAD DATA" Width="100" Height="30" FontSize="15" FontWeight="Bold" Click="btnLoad_Click"></Button>
            <ComboBox x:Name="cbCate" Width="100"/>

            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnAdd" Content="ADD" Width="100" Margin="5" FontSize="18" Click="btnAdd_Click"></Button>
                <Button x:Name="btnUpdate" Content="UPDATE" Width="100" Margin="5" FontSize="18"></Button>
                <Button x:Name="btnDelete" Content="DELETE" Width="100" Margin="5" FontSize="18"></Button>
            </StackPanel>
            

        </StackPanel>
    </Grid>
</Window>
